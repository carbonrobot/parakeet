{
    "compilerOptions": {
        //"outDir": "./public/scripts",
        //"out": "app.js",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "typeRoots": [
            "../node_modules/@types"
        ],
        "types": [
            "core-js"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}